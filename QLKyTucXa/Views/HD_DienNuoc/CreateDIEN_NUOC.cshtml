@model QLKyTucXa.Models.ViewModel_HD
@{
    ViewBag.Title = "CreateDIEN_NUOC";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@section header{
    Thêm chỉ số điện nước
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Nhập Thông Tin Điện Nước</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Html.BeginForm())
                    {
                        <div class="form-horizontal">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="control-group">
                                <label class="control-label">Nước chỉ số đầu(<a class="text-error">*</a>):</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.NUOCCHISODAU, new { htmlAttributes = new { @class = "span11" } })
                                    @Html.ValidationMessageFor(model => model.NUOCCHISODAU, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Nước chỉ số cuối(<a class="text-error">*</a>):</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.NUOCCHISOCUOI, new { htmlAttributes = new { @class = "span11" } })
                                    @Html.ValidationMessageFor(model => model.NUOCCHISOCUOI, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Điện chỉ số đầu(<a class="text-error">*</a>):</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.DIENCHISODAU, new { htmlAttributes = new { @class = "span11" } })
                                    @Html.ValidationMessageFor(model => model.DIENCHISODAU, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Điện chỉ số cuối(<a class="text-error">*</a>):</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.DIENCHISOCUOI, new { htmlAttributes = new { @class = "span11" } })
                                    @Html.ValidationMessageFor(model => model.DIENCHISOCUOI, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-actions">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-actions">
    <p class="btn btn-info">@Html.ActionLink("Quay lại trang danh sách", "Index")</p>
</div>